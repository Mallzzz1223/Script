-- ** Bagian 4: Logika Tombol dan Animasi **
local TweenInfo = TweenInfo.new(
    0.3, -- Durasi
    Enum.EasingStyle.Quint,
    Enum.EasingDirection.Out,
    0,
    false,
    0
)

local function tweenGUI(visible)
    local targetPosition = UDim2.new(0.5, -250, 0.5, -175)
    local startPosition = UDim2.new(0.5, -250, -0.5, 0)

    if not visible then
        targetPosition = UDim2.new(0.5, -250, -0.5, 0)
        startPosition = UDim2.new(0.5, -250, 0.5, -175)
    end

    MainFrame.Position = startPosition
    MainFrame.Visible = true

    local tween = TweenService:Create(MainFrame, TweenInfo, {Position = targetPosition})
    tween:Play()
    if not visible then
        tween.Completed:Wait()
        MainFrame.Visible = false
    end
end

ToggleButton.MouseButton1Click:Connect(function()
    tweenGUI(not MainFrame.Visible)
end)

CloseButton.MouseButton1Click:Connect(function()
    tweenGUI(false)
end)

MainScreenGui.Parent = PlayerGui
